extends ../layouts/default
block metadata
	if  (data.category)
		title=data.category ? data.category.name : 'Content Hub' || 'Profile Pension'
		meta(property='og:title', content="" +data.category.metatitle  )
		meta(name="twitter:title", content='#{data.category.metatwittertitle}' )
		meta(name="description" content='#{data.category.metadescription}' )
		meta(property="og:description" , content='#{data.category.metafbdescription}' )
		meta(name="twitter:description", content='#{data.category.metatwitterdescription}' )
		meta(property="og:image" content='#{data.category.metafbimageurl}' )
		meta(name="twitter:image:src" content='#{data.category.metatwitterdescription}' )
		meta(name="twitter:card" , content="#{data.category.metatwittercard}" )
		meta(name="keywords" content="#{data.beginnerguide.metakeywords}" )
	else
		+beginnerguidemeta()
		
mixin beginnerguide(beginnerguide)
	.beginnerguide(data-ks-editable=editable(user, { list: 'BeginnerGuide', id: beginnerguide.id }))
		div.row.advice
			a.col-md-5.equal.advice-imagea(href='/beginner-guides/beginnerguide/' + beginnerguide.slug)
				if beginnerguide.image.exists
					img(src=beginnerguide._.image.fit(150, 177)).img-responsive
			div.col-md-7.equal.advice-content
				h2.advice-title: a(href='/beginner-guides/beginner-guide/' + beginnerguide.slug)= beginnerguide.title
				div.advice-meta
					if beginnerguide.publishedDate
						span.advice-meta__date #{beginnerguide._.publishedDate.format('DD/MM/YYYY')}
					if beginnerguide.author.name.first
						span.advice-meta__author #{beginnerguide.author.name.first}
				p.advice-text!= beginnerguide.content.brief
				div.share
					span Share | 
					a(href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + beginnerguide.slug + '' target="_blank" style="font-size: 18px;")
						i.fitted.fa.fa-facebook.f.icon
					a(href='https://twitter.com/home?status=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + beginnerguide.slug + '' target="_blank" style="font-size: 18px;")
						i.fitted.fa.fa-twitter.icon
					a(href='https://plus.google.com/share?url=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + beginnerguide.slug+ '' target="_blank" style="font-size: 18px;")
						i.fitted.fa.fa-google-plus.icon
					a(href='https://www.linkedin.com/shareArticle?mini=true&amp;url=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + beginnerguide.slug + '&amp;title=' + beginnerguide.title + '+-+Profile+Pensions&amp;summary=&amp;source=" target="_blank" style="font-size: 18px;')
						i.fitted.fa.fa-linkedin.icon
					a(href='mailto:?body=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + beginnerguide.slug + '' style="font-size: 18px;")
					
block intro
	section.intro.green.text-center
		h1= data.category ? data.category.name : 'Beginner Guides'
		h3 Please let us know who you are (click on a category below), alternatively, please find our most recent content below
	div.grey
		.container
			ul.breadcrumb
				li: a(href='/beginner-guides') Beginner Guides
				li   /  
				li= data.category ? data.category.name : 'Beginner Guides  '
				.pull-right
					if data.categories.length
						span
							a(href='/beginner-guides', class=!data.category ? 'active' : false) All Categories  /  
						each cat in data.categories
							a(href='/beginner-guides/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).span= cat.name +' /  '	
			
block content
	.container
		.row
			.col-sm-8.col-md-9.border-right
				if filters.category && !data.category
					h3.text-muted Invalid Category.
				else
					if data.beginnerguides.results.length
						if data.beginnerguides.totalPages > 1
							h4.text-weight-normal Showing 
								strong #{data.beginnerguides.first}
								|  to 
								strong #{data.beginnerguides.last}
								|  of 
								strong #{data.beginnerguides.total}
								|  beginnerguides.
						else
							h4.text-weight-normal Showing #{utils.plural(data.beginnerguides.results.length, '* beginnerguide')}.
						.row
							each beginnerguide in data.beginnerguides.results
								.col-md-6.col-sm-12
									+beginnerguide(beginnerguide)
						
						if data.beginnerguides.totalPages > 1
							ul.pagination
								if data.beginnerguides.previous
									li: a(href='?page=' + data.beginnerguides.previous): i.fa.fa-angle-left
								else
									li.disabled: a(href='?page=' + 1): i.fa.fa-angle-left
								each p, i in data.beginnerguides.pages
									li(class=data.beginnerguides.currentPage == p ? 'active' : null)
										a(href='?page=' + (p == '...' ? (i ? data.beginnerguides.totalPages : 1) : p ))= p
								if data.beginnerguides.next
									li: a(href='?page=' + data.beginnerguides.next) Next page
										i.fa.fa-angle-right 
								else
									li.disabled: a(href='?page=' + data.beginnerguides.totalPages) Next page
										i.entypo.fa.fa-angle-right
					else
						if data.category
							h3.text-muted There are no beginnerguides in the category #{data.category.name}.
						else
							h3.text-muted There are no beginnerguides yet.
