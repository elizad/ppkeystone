extends ../../layouts/default

block intro
	section.intro.green.text-center
		h1 Meet the team 
		h3 Over 120 people helping you make sense of your pension
	ul.breadcrumb
		li: a(href='/meet-the-team') Meet the team

block content
	section
		.categories
			//if filters.category && !data.category
			//	h3.text-muted Invalid Category.
			//else
			//	h3= data.categories.length

		if data.categories.length
				.col
					each cat in data.categories
						a(href='/meet-the-team/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
						p= cat.categorytitle
						p= cat.description
								if filters.category && !data.category
									h3.text-muted Invalid teamMembers.
								else
									h1= data.category ? data.category.name : 'Advisors'
									.row
										each teamMember in data.teamMembers.results
											.col.col-centered.text-center
												span
													img.img-responsive(src=teamMember.teamMemberImage)
												a(href='http://localhost:3000/meet-the-team/' + teamMember.slug)
													h2= teamMember.title
												p= teamMember.jobtitle
												p= teamMember.categories

			
	section.p3rem
