extends ../../layouts/default

block intro
	section.intro.green.text-center
		h1 Meet the team 
		h3 page subtitle
	ul.breadcrumb
		li: a(href='/meet-the-team') Meet the team

block content
	section.p3rem
		.container
			.row.text-center.roe-centered
				h1.col-md-12 Our Leadership Team
				p.col-md-12 Our leadership team oversee our entire operation to make sure it's simple, effective and works for you!
				if teamMembers.length
					each teamMember in teamMembers
						.col.col-centered.text-center
							img(src=teamMember.teamMemberImage)
							h2= teamMember.fullname
							p= teamMember.jobtitle
				else
					h3.text-muted There are no team member yet.
	section.grey.p3rem
		.container
			.row.text-center
				h1.col-md-12 Our Leadership Team
				p.col-md-12  Our leadership team oversee our entire operation to make sure it's simple, effective and works for you!
