extends ../layouts/default
include ../mixins/tpdata
include ../mixins/company-features
include ../mixins/process	
include ../mixins/promises
include ../mixins/carouselreviews
include ../mixins/tpreviews
include ../mixins/partners	
include ../mixins/press
block metadata
	if  data.pensionswitch
		title= data.pensionswitch.metatitle || 'Profile Pension'
		meta(property='og:title' , content=''+ data.pensionswitch.metadata.metafbtitle + ''  )
		meta(name='twitter:title', content='' + data.pensionswitch.metadata.metatwittertitle +'' )
		meta(name='description' content='' + data.pensionswitch.metadata.metadescription  +'' )
		meta(property='og:description' , content='' + data.pensionswitch.metadata.metafbdescription + '' )
		meta(name='twitter:description', content='' + data.pensionswitch.metadata.metatwitterdescription+ '' )
		meta(property='og:image' content='' + data.pensionswitch.metadata.metafbimageurl+ '' )
		meta(name='twitter:image:src' content='' + data.pensionswitch.metadata.metatwitterdescription + '' )
		meta(name='twitter:card' , content='' + data.pensionswitch.metadata.metatwittercard + '' )
		meta(name='keywords' content='' + data.pensionswitch.metadata.metakeywords + '' )
	else
		+postmeta()
block content
	section#homehead
		.container.text-center
			h1= data.pensionswitch.s1title
			div.row.justify-content-center
				div.col-xs-8.col-md-6
					p!= data.pensionswitch.s1content
					a(href='/'+ data.pensionswitch.s1buttonlink+'').btn.btn-lg.btn-primary= data.pensionswitch.s1button
					+tpdata()
	
	+company-features()
	section.p3rem.grey.company-services
		.container.text-center
			div.row.justify-content-center
				div.col-xs-8.col-md-6
					h2 Why you should consider switching
					p There are lots of good reasons to compare and switch your pension. We find a better pension for 7 out of every 10 people we speak to.
			div.row.equal.p3rem
				div.col-lg-3.col-md-6.company-services__item
					div.panel.panel-success
						img.company-services-image(src="/images/Performance.svg" alt="Performance")
						h4.panel-title Performance
						p 73% of people don’t know how their pension is performing. Make sure your hard-earned savings are well invested in a growing fund.
				div.col-lg-3.col-md-6.company-services__item
					div.panel.panel-success
						img.company-services-image(src="/images/FeesCharges.svg" alt="Fees &amp; Charges")
						h4.panel-title Fees &amp; Charges
						p 70% of customers who compared their pension are able to find a better deal. Are over-bloated fees eating into your pension pot? We’ll tell you.
				div.col-lg-3.col-md-6.company-services__item
					div.panel.panel-success
						img.company-services-image(src="/images/Access.svg" alt="Access to your cash")
						h4.panel-title Access to your cash
						p Over half of our customers discovered they were not in flexible pensions. Get started today to find out how you can access tax free cash from 55.
				div.col-lg-3.col-md-6.company-services__item
					div.panel.panel-success
						img.company-services-image(src="/images/Consolidate.svg" alt="Consolidate")
						h4.panel-title Consolidate
						p Organise multiple pensions into a single pot to reduce paperwork and hassle. Start making it easier to manage your savings.
			div.row
				.col.text-center
					a.btn.btn-lg.btn-primary(href='/get-started-trace', role='button') Get started 			
							
				
				
	+process()
	+promises()
	+carouselreviews()
	+tpreviews()
	+partners()
	+press()
	
