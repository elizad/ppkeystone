mixin post(post)
	.post(data-ks-editable=editable(user, { list: 'Post', id: post.id }))
		div.row.advice
			a.col-md-5.equal.advice-imagea(href='/content-hub/post/' + post.slug)
				if post.image.exists
					img(src=post._.image.fit(150, 177)).img-responsive
			div.col-md-7.equal.advice-content
				h2.advice-title: a(href='/content-hub/post/' + post.slug)= post.title
				div.advice-meta
					if post.publishedDate
						span.advice-meta__date #{post._.publishedDate.format('DD/MM/YYYY')}
					if post.author.name.first
						span.advice-meta__author #{post.author.name.first}
				p.advice-text= post.content.brief
				div.share
					span Share | 
					a(href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + post.slug + '' target="_blank" style="font-size: 18px;")
						i.fitted.fa.fa-facebook.f.icon
					a(href='https://twitter.com/home?status=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + post.slug + '' target="_blank" style="font-size: 18px;")
						i.fitted.fa.fa-twitter.icon
					a(href='https://plus.google.com/share?url=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + post.slug+ '' target="_blank" style="font-size: 18px;")
						i.fitted.fa.fa-google-plus.icon
					a(href='https://www.linkedin.com/shareArticle?mini=true&amp;url=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + post.slug + '&amp;title=' + post.title + '+-+Profile+Pensions&amp;summary=&amp;source=" target="_blank" style="font-size: 18px;')
