extends ../layouts/default
block metadata
	if  data.infographic
		title= data.infographic.metatitle || 'Profile Pension'
		meta(property='og:title', content="" +data.infographic.metatitle  )
		meta(name="twitter:title", content='#{data.infographic.metatwittertitle}' )
		meta(name="description" content='#{data.infographic.metadescription}' )
		meta(property="og:description" , content='#{data.infographic.metafbdescription}' )
		meta(name="twitter:description", content='#{data.infographic.metatwitterdescription}' )
		meta(property="og:image" content='#{data.infographic.metafbimageurl}' )
		meta(name="twitter:image:src" content='#{data.infographic.metatwitterdescription}' )
		meta(name="twitter:card" , content="#{data.infographic.metatwittercard}" )
		meta(name="keywords" content="#{data.infographic.metakeywords}" )
	else
		+postmeta()
block intro
	section.intro.green.text-center
		if !data.infographic
			h2 Invalid infographic.
		else
			h1= data.infographic.longtitle
		if data.infographic.author
			h3 by #{data.infographic.author.name.first}
	div.grey
		ul.container.breadcrumb
			li: a(href='/content-hub') &larr; Content Hub
			li   /  
			if !data.infographic
				li Invalid infographic.
			else
				li= data.infographic.title
block content
	.container: .row.p3rem
		.col-md-9.col-sm-12.border-right
			article
			if !data.infographic
				h2 Invalid infographic.
			else
				header
					h2= data.infographic.title
					h5 infographiced 
						if data.infographic.publishedDate
							| on #{data.infographic._.publishedDate.format('DD/MM/YYYY')} 
						if data.infographic.categories && data.infographic.categories.length
							| in 
							each cat, cat_i in data.infographic.categories
								a(href='/content-hub/' + cat.key)= cat.name
								if cat_i < data.infographic.categories.length - 1
									| , 
								else
									|
						if data.infographic.author
							|  by #{data.infographic.author.name.first}
				.infographic
					if data.infographic.image.exists
						.image-wrap: img(src=data.infographic._.image.fit(750, 450)).img-responsive
					!= data.infographic.content.full
			div.pagination
				a(href="https://www.profilepensions.co.uk/pension-options-retirement/") Next infographic 
					i.right.fa.fa-caret-right
			
			div.p3rem
				h2 More things you might like
				div.row
					each infographic in data.infographics
						div.col-md-6.col-lg-6
							div.row.advice
								a.col-md-5.equal.advice-image(href="")
									img(src=infographic._.image.fit(150, 177)).img-responsive
								div.col-md-7.equal.advice-content
									h2.advice-title= infographic.title
									div.advice-meta
										if infographic.publishedDate
											span.advice-meta__date  #{infographic._.publishedDate.format('DD/MM/YYYY')}
										if infographic.author.name.first
											span.advice-meta__author  #{infographic.author.name.first}
									p.excerpt!= infographic.content.brief
									div.share
										span Share | 
										a(href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + infographic.slug + '' target="_blank" style="font-size: 18px;")
											i.fitted.fa.fa-facebook.f.icon
										a(href='https://twitter.com/home?status=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + infographic.slug + '' target="_blank" style="font-size: 18px;")
											i.fitted.fa.fa-twitter.icon
										a(href='https://plus.google.com/share?url=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + infographic.slug + '' target="_blank" style="font-size: 18px;")
											i.fitted.fa.fa-google-plus.icon
										a(href='https://www.linkedin.com/shareArticle?mini=true&amp;url=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + infographic.slug + '&amp;title=' + data.infographic.title + '+-+Profile+Pensions&amp;summary=&amp;source=" target="_blank" style="font-size: 18px;')
											i.fitted.fa.fa-linkedin.icon
										a(href='mailto:?body=https%3A%2F%2Fwww.profilepensions.co.uk%2F' + infographic.slug + '' style="font-size: 18px;")

										
		.col-sm-12.col-md-3.sidebar
				div.share.area
					h2.shares-header Share
					div.shares
						a(href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.profilepensions.co.uk%2F'+data.infographic.slug+'' target="_blank" style="font-size: 18px;")
							i.fitted.fa.fa-facebook.f.icon
